# Cron job to run the backup script daily at a configurable time
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Cron job format: minute hour day month weekday command
# This placeholder will be replaced with the actual cron schedule
0 2 * * * /app/backup.sh >> /var/log/cron.log 2>&1