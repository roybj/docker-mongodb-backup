# Cron job to run the backup script daily at a configurable time
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Set timezone
TZ=${TZ:-UTC}
export TZ

# Cron job format: minute hour day month weekday command
CRON_TIME_PLACEHOLDER /app/backup.sh >> /var/log/cron.log 2>&1