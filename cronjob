# Cron job to run the backup script daily at a configurable time
SHELL=/bin/bash
BASH_ENV=/app/.env

# Ensure the timezone is sourced from the .env file
TZ=${TZ:-UTC}
export TZ

# Placeholder for cron time, to be replaced dynamically
CRON_TIME_PLACEHOLDER root /app/backup.sh >> /var/log/cron.log 2>&1